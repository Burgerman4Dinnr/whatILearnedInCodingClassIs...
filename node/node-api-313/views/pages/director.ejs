<%- include('../partials/header'); %>

<main class="main main-director">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <header class="h2"><%= name %></header>
            </div>
            <div class="col-md-6">
                <a href="/director/form">add a director</a>
            </div>
        </div>
        <section class="section section-director">
            <div class="row">
                <% data.forEach(item => { %>
                    <div class="col-md-3">
                        <div class="director-div">
                            <img src="https://via.placeholder.com/200x300" alt="<%= item.fName %> <%= item.lName %>" class="img-fluid director-img" />
                            <p class="director-name"><%= item.fName %> <%= item.lName %></p>
                        </div>
                    </div>
               <% }) %>
            </div>
        </section>
    </div>
</main>

<%- include('../partials/footer'); %>